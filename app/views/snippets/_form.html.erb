<%= form_for @snippet do |f| %>
  <div>
    <%= f.collection_select :language_id, Language.order(:name), :id, :name %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title  %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body  %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
