<%= form_for @snippet do |f| %>
  <div>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title  %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body  %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
